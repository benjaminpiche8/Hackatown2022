<HomePage>:

    Button:
        pos_hint:{"x":0,"y":0}
        size_hint: 0.25, 0.15
        font_size: (self.width  + self.height ) / 15
        text: "HomePage"


    Button:
        pos_hint:{"x":0.75,"y":0}
        size_hint: 0.25, 0.15
        font_size: (self.width  + self.height ) / 15
        text: "SettingsPage"
        on_release:
            root.manager.transition.direction = "left"
            root.settingsBtn()
            
    Button:
        pos_hint:{"x":0.25,"y":0}
        size_hint: 0.25, 0.15
        font_size: (self.width  + self.height ) / 15
        text: "Météo"
        on_release:
            root.manager.transition.direction = "left"
            root.meteoBtn()

    Button:
        pos_hint:{"x":0.5,"y":0}
        size_hint: 0.25, 0.15
        font_size: (self.width  + self.height ) / 15
        text: "Outfit"
        on_release:
            root.manager.transition.direction = "left"
            root.outfitBtn()


