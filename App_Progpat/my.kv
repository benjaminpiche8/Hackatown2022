<FullOutfitPage>:

    GridLayout:
        
        GridLayout:
            cols:4
            size: root.width, (root.height/6.66)
            pos:0,0
            
            Button:
                font_size: (self.width  + self.height ) / 15
                text: "HomePage"
                on_release:
                    root.manager.transition.direction = "right"
                    root.homeBtn()

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "Météo"
                on_release:
                    root.manager.transition.direction = "right"
                    root.meteoBtn()

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "Outfit"

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "SettingsPage"
                on_release:
                    root.manager.transition.direction = "left"
                    root.settingsBtn()

        GridLayout:
            cols:1
            size: (root.width/2), (root.height/1.1)
            pos: 0,(root.height/6.66)

            Label:
                text: "Recommended top : "
                font_size: (self.width  + self.height ) / 30

            Label:
                text: "2 : "
                font_size: (self.width  + self.height ) / 30
            
            Label:
                text: "3 : "
                font_size: (self.width  + self.height ) / 30
            
            Label:
                text: "4 : "
                font_size: (self.width  + self.height ) / 30

