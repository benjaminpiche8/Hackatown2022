<FullOutfitPage>:
    canvas.before:
        Color: 
            rgba: (120/240,120/240,120/240,0.9)
        Rectangle:
            pos : self.pos
            size: self.size
            
    GridLayout:
        
        GridLayout:
            cols:4
            size: root.width, (root.height/6.66)
            pos:0,0
            
            Button:
                font_size: (self.width  + self.height ) / 15
                text: "HomePage"
                on_release:
                    root.manager.transition.direction = "right"
                    root.homeBtn()

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "Météo"
                on_release:
                    root.manager.transition.direction = "right"
                    root.meteoBtn()

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "Outfit"

            Button:
                font_size: (self.width  + self.height ) / 15
                text: "SettingsPage"
                on_release:
                    root.manager.transition.direction = "left"
                    root.settingsBtn()

        GridLayout:
            cols:1
            size: (root.width/2), (root.height/1.1)
            pos: 0,(root.height/6.66)

            Label:
                text: "Recommended top : " + root.__recommended_top__
                font_size: (self.width  + self.height ) / 30

            Label:
                text: "Recommended bottom : " + root.__recommended_bottom__
                font_size: (self.width  + self.height ) / 30
            
            Label:
                text: "Recommended footwear : " + root.__recommended_footwear__
                font_size: (self.width  + self.height ) / 30
            
            Label:
                text: "Recommended accessory : " + root.__recommended_accessory__
                font_size: (self.width  + self.height ) / 30
        BoxLayout:
            orientation: "vertical"
            size: (root.width/2), (root.height/2)
            pos : (root.width/2.1), (root.height/1.5)

            pos_hint: {"x":0.7, "y":0.6}
            #size_hint: 0.35, 0.15
            size_hint: 0.5, 0.5
            Image:
                source: root.__icon_accessory__
                keep_ratio: True

        BoxLayout:
            orientation: "vertical"
            size: (root.width/2), (root.height/2)
            pos : (root.width/2.1), (root.height/2.2)

            pos_hint: {"x":0.7, "y":0.6}
            #size_hint: 0.35, 0.15
            size_hint: 0.5, 0.5

            Image:
                source: root.__icon_top__
                keep_ratio: True

        BoxLayout:
            orientation: "vertical"
            size: (root.width/2), (root.height/2)
            pos : (root.width/2.1), (root.height/4.4)

            pos_hint: {"x":0.7, "y":0.6}
            #size_hint: 0.35, 0.15
            size_hint: 0.5, 0.5
            Image:
                source: root.__icon_bottom__
                keep_ratio: True

        BoxLayout:
            orientation: "vertical"
            size: (root.width/2), (root.height/2)
            pos : (root.width/2.1), (root.height/40)

            pos_hint: {"x":0.7, "y":0.6}
            #size_hint: 0.35, 0.15
            size_hint: 0.5, 0.5
            Image:
                source: root.__icon_footwear__
                keep_ratio: True

        





   